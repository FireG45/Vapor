@{
    ViewData["Title"] = "Главная";
    bool isWlist = (bool)(ViewData["IsWlist"]);
    var CItem1 = ViewData["CItem1"] as Item;
    var CItem2 = ViewData["CItem2"] as Item;
    var CItem3 = ViewData["CItem3"] as Item;
    Random R = new();

    var TagItems = ViewData["TagItems"] as List<Item>;
    var Tag = ViewData["Tag"] as string;

    var Iarr1 = new[] { CItem1.Img2, CItem1.Img3, CItem1.Img4, CItem1.Img5 };
    var Iarr2 = new[] { CItem2.Img2, CItem2.Img3, CItem2.Img4, CItem2.Img5 };
    var Iarr3 = new[] { CItem3.Img2, CItem3.Img3, CItem3.Img4, CItem3.Img5 };
}

@inject UserManager<User> UserManager

<div class="card" style="background-color: #2C2F31">
    <div class="card-body">
        <div class="row">
            <div class=" col-md-9">
                <div class="card" style="background-color: #2C2F31">
                    <div class="card-header">
                        @if (isWlist)
                        {
                            <h3>У вас в желаемом:</h3>
                        }
                        else
                        {
                            <h3>Посмотрите также:</h3>
                        }

                    </div>
                    <div class="card-body">
                        @if (CItem1 != null || CItem2 != null || CItem3 != null)
                        {
                            <div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-ride="carousel">
                                @*<ol class="carousel-indicators">
                                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                    </ol>*@
                                <div class="carousel-inner" data-ride="c" style="text-shadow:1px 1px 2px black">
                                    <div class="carousel-item active">
                                        <img class="d-block w-100" src=@Iarr1[R.Next(0, Iarr3.Length)] alt="First slide">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h2>@CItem1.Name</h2>
                                            @CItem1.Price.ToString("c")<br />
                                            <a class="btn btn-danger" asp-controller="Items" asp-action="Details" asp-route-Id=@CItem1.Id>Подробнее</a>
                                        </div>
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src=@Iarr2[R.Next(0, Iarr3.Length)] alt="Second slide">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h2>@CItem2.Name</h2>
                                            @CItem2.Price.ToString("c")<br />
                                            <a class="btn btn-danger" asp-controller="Items" asp-action="Details" asp-route-Id=@CItem2.Id>Подробнее</a>
                                        </div>
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src=@Iarr3[R.Next(0, Iarr3.Length)] alt="Third slide">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h2>@CItem3.Name</h2>
                                            @CItem3.Price.ToString("c")<br />
                                            <a class=" btn btn-danger" asp-controller="Items" asp-action="Details" asp-route-Id="@CItem3.Id">Подробнее</a>
                                        </div>
                                    </div>
                                </div>

                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        }

                    </div>
                </div>
            </div>


            <div class="col-md-3">
                <div class="card" style="background-color: #2C2F31">

                    <a class="btn btn-outline-dark text-center text-white" asp-controller="Items" asp-action="Index">Все игры</a>
                    <a class="btn btn-outline-dark text-center text-white" asp-controller="Items" asp-action="Details" asp-route-rand="@true">Случайная игра</a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-outline-dark text-center text-white" asp-controller="Items" asp-action="ShopCart">Корзина</a>
                        <a class="btn btn-outline-dark text-center text-white" asp-controller="Items" asp-action="WishList">Желаемое</a>
                    }


                    @if (User.IsInRole("Admin"))
                    {
                        <p>Admin menu:</p>
                        <a class="btn btn-outline-dark text-center text-white" asp-controller="Items" asp-action="Create">Create Item</a>
                        <a class="btn btn-outline-dark text-center text-white" asp-controller="Reviews" asp-action="Index">Reviews</a>
                        <a class="btn btn-outline-dark text-center text-white" asp-controller="Tags" asp-action="Index">Tags</a>
                        <a class="btn btn-outline-dark text-center text-white" asp-controller="Admin" asp-action="RoleList">Roles</a>
                    }
                </div>
            </div>
        </div>

    </div>
</div>

<div class="card" style="background-color: #2C2F31">
    <div class="card-header">
        <h4>Игры с тэгом: <a class="rounded" style="background: #008aff; color: white; ">&nbsp @Tag &nbsp</a> </h4>

    </div>

    <table class="card-body" style="background-color: #181A1B">
        <tbody>
            @foreach (var item in TagItems)
            {
                <tr>
                    <td>
                        <partial name="OneItem" model="item" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>