    
<!DOCTYPE html>
<script src="https://use.fontawesome.com/d93af8e4ce.js"></script>
<html lang="ru">




<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vapor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" href="~/img/favicon.ico" type="image/x-icon">

    <style type="text/css">
        .rating {
            text-shadow: 1px 1px 2px black;
            margin: 0 0 0;
            background: #666;
            font-weight: 800;
            border-radius: 2px;
            display: flex;
            display: -webkit-flex;
            display: -ms-flexbox;
            -webkit-align-items: center;
            -ms-flex-align: center;
            -ms-flex-pack: center;
            align-items: center;
            justify-content: center;
            -webkit-justify-content: center;
        }

        .card {
            border-color: #0f1011;
        }

        .card-header {
            border-color: #0f1011;
        }

        .card-body {
            border-color: #0f1011;
        }

        .card-footer {
            border-color: #0f1011;
        }

        .btn-outline-dark {
            border-color: #0f1011;
        }
    </style>

</head>
<body style="background-color: #181A1B; background: linear-gradient(#181A1B, #2C2F31) fixed; ">
    <header>

        <nav class="navbar navbar-expand-md navbar-dark " style="background-color:#2C2F31">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    Vapor
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end" id="navbarCollapse">
                    <div>
                        <partial name="_LoginPartial" />
                    </div>

                    <div>

                    </div>


                </div>
            </div>
        </nav>


        @*<form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>*@
        <!--</div>
            </div>
        </nav>-->
    </header>

    <div class="container ">
        <main role="main" class="text-white">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container ">
            &copy; 2021 - Vapor
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>